# .env.production
# Configurações de produção

NODE_ENV=production
PORT=3001
DEBUG=false

# Database
DATABASE_URL=${DB_URL_PRODUCTION}

# JWT
JWT_SECRET=${JWT_SECRET_PRODUCTION}
JWT_EXPIRES_IN=30d

# Frontend
NEXT_PUBLIC_API_URL=https://api.limpezapro.com

# Payment Gateways
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY_PRODUCTION}
MERCADOPAGO_TOKEN=${MERCADOPAGO_TOKEN_PRODUCTION}

# Email
SMTP_HOST=${SMTP_HOST_PRODUCTION}
SMTP_PORT=587
SMTP_USER=${SMTP_USER_PRODUCTION}
SMTP_PASSWORD=${SMTP_PASSWORD_PRODUCTION}

# SMS/WhatsApp
TWILIO_SID=${TWILIO_SID_PRODUCTION}
TWILIO_TOKEN=${TWILIO_TOKEN_PRODUCTION}

# Google Maps
GOOGLE_MAPS_API_KEY=${GOOGLE_MAPS_API_KEY_PRODUCTION}

# Redis
REDIS_URL=${REDIS_URL_PRODUCTION}

# Logging
LOG_LEVEL=warn
SENTRY_DSN=${SENTRY_DSN_PRODUCTION}
